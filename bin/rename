#!/usr/bin/env bash

ntuser=$1
ntrepo=$2
ntfname=$3
ntclass=$4

if [ -z $ntuser ] || [ -z $ntrepo ] || [ -z $ntfname ] || [ -z $ntclass ]
then
  echo "Usage: ./bin/rename [GITUSER] [GITREPO] [LOWERCASENAME] [CLASSNAME]"
  exit
fi

declare -a files=("spec/**/*" "src/*" "index.js" "package.json" "README.md" "bin/rename")

for file in "${files[@]}"
do
  perl -pi -w -e "s/winton\/industry-trace/$ntuser\/$ntrepo/g;" $file
  perl -pi -w -e "s/industry-trace/$ntrepo/g;" $file
  perl -pi -w -e "s/IndustryTrace/$ntclass/g;" $file
done

mv spec/integrate/industry-trace.spec.js spec/integrate/$ntfname.spec.js
mv spec/unit/industry-trace.spec.js spec/unit/$ntfname.spec.js
mv src/industry-trace.js src/$ntfname.js
